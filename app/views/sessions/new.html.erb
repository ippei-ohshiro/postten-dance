<div class="text-center mt-4">
  <h1 class="display-3 font-weight-bold">Postten<br> Dance</h1>
  <p class="lead">ダンスレッスン投稿サービス</p>
  <h1 class="mt-5 font-weight-bold">ログイン</h1>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

      <div class="form-group">
        <%= f.label :email, 'Email' %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password, 'Password' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <%= f.submit 'Log in', class: 'btn btn-success btn-block' %>
    <% end %>

    <p>新規登録はこちらから→ <%= link_to 'Sign up now!', signup_path %></p>
  </div>
</div>