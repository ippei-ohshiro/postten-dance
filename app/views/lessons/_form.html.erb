
<%= form_with(model: lesson, local: true) do |f| %>
  <% if lesson.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% lesson.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :title, 'タイトル' %>
  <%= f.text_field :title %>

　<%= f.label :subtitle, 'サブタイトル' %>
  <%= f.text_field :subtitle %>

  <%= f.label :content, '内容' %>
  <%= f.text_field :content %>

  <%= f.submit '投稿' %>
<% end %>