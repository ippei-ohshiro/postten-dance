<header>
  <nav class="navbar navbar-expand-sm navbar-light bg-light">
    <% if logged_in? %>
      <a class="navbar-brand"  href="<%= root_path(current_user) %>">Postten Dance</a>
    <% else %>
      <a class="navbar-brand font-weight-bold"  href="/">Postten Dance</a>
    <% end %>
    <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
      <ul class="navbar-nav">
         <% if logged_in? %>
          <li class="nav-item"><%= link_to 'Users', users_path, class: 'nav-link' %></li>
          <li class="nav-item"><a href="<%= user_path(current_user) %>" class="nav-link"><%= current_user.name%></a></li>
          <li class="nav-item"><%= link_to 'Logout', logout_path, method: :delete, class: "nav-link" %></li>
        <% else %>
          <li class="nav-item"><%= link_to 'Signup', signup_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to 'Login', login_path, class: 'nav-link' %></li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>